<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Restaurant Des Plantes - Durtal{% endblock %}</title>
    {% block stylesheets %}
        <link type="text/css" media="all" rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lora&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/3c7293bb7f.js" crossorigin="anonymous"></script>

    {% endblock %}

    {% block javascripts %}
        <script>

        </script>
    {% endblock %}
</head>
<body>
<header class="header">
    <img class="header__img" src="{{ asset('images/Logo.png') }}" alt="logo">
    <h1 class="header__title">
        Restaurant des Plantes
    </h1>
    <!--<i class="header__burger fa-solid fa-bars"></i>-->
    <ul class="header__items">
        <li class="header__item"><a href="{{ path('app_homepage')}}">Retourner au site ></a></li>
    </ul>

</header>

{% block body %}
<form method="post" class="loginform">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se deconnecter</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connectez-vous ici</h1>
    <label for="inputUsername">Identifiant</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
    <label for="inputPassword">Mot de Passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
</form>
{% endblock %}
